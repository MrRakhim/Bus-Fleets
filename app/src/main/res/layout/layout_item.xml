<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8sp"
    android:paddingTop="8sp"
    android:paddingBottom="0sp"
    android:background="@color/gray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="260sp"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp">
                <LinearLayout
                    android:layout_width="180sp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10sp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/bus_img"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:layout_marginVertical="10sp"
                        android:src="@drawable/ic_baseline_directions_bus_24"
                        />
                    <TextView
                        android:id="@+id/car_mark"
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:text="Car Mark"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp">
                        <TextView
                            android:id="@+id/car_number"
                            android:layout_width="70sp"
                            android:layout_height="20sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="5sp"
                            android:text="car number"
                            android:textSize="10sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/car_seat"
                            android:layout_width="70sp"
                            android:layout_height="20sp"
                            android:layout_marginVertical="5sp"
                            android:layout_marginHorizontal="5sp"
                            android:text="car seats"
                            android:textSize="10sp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:layout_gravity="right|center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="180sp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/trip_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Almaty - Nur-Sultan"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_marginVertical="10sp"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Отправление"
                        android:layout_marginTop="20sp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/fromDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дата - 06.02.2020 Thu"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:paddingHorizontal="10sp"

                        />
                    <TextView
                        android:id="@+id/fromTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время - 01:28"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:paddingHorizontal="10sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="Прибытие"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/toDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Дата - 07.02.2020 Fri"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:paddingHorizontal="10sp"

                        />
                    <TextView
                        android:id="@+id/toTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Время - 13:50"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textAlignment="textStart"
                        android:paddingHorizontal="10sp"
                        />
                </LinearLayout>


            </LinearLayout>
            <Button
                android:id="@+id/delete_trip_btn"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="center|bottom"
                android:layout_marginHorizontal="10sp"
                android:background="@drawable/low_border"
                android:textColor="@color/white"
                android:text="Удалить рейс"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>